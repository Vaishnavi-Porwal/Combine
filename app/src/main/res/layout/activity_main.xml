<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/main"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Image capture and display section -->
    <ImageView
        android:id="@+id/cameraImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_image_24"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/captureImgBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capture Image"
        android:backgroundTint="@color/green"
        android:layout_marginTop="12dp" />

    <!-- Text extraction display section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Extracted Text:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="8dp"
        android:background="@drawable/border"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical" />

    <!-- Classification trigger and result display section -->
    <Button
        android:id="@+id/processBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classify Text"
        android:backgroundTint="@color/green"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/classifiedResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:text="Classification Result:"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border"
        android:textColor="@color/black" />

</LinearLayout>